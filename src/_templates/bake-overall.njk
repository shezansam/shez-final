{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }}{% endblock %}

{% block content %}
<!-- Article -->
<section class="containter mx-3">
  <div class="row">

<!-- Left column photo -->
    <div class="col-md-6 col-lg-4">
      <figure class="figure resort-photo">
        <img src="{{ relative_path }}img/{{ image }}" alt="{{ title }}" class="img-fluid">
      </figure>
    </div>

    <!-- Right column story -->
    <div class="col-md-6 col-lg-8 baked">
      <h1>{{ title }}</h1>
        <ul>
            <li><h4><strong>Location: </strong>{{ location }}</h4></li>
            <li><h4><strong>Closest Airport: </strong>{{ airport }}</h4></li>
            <li><h4><strong>Elevation: </strong>{{ elevation }}</h4></li>
            <li><h4><strong>Ticket Price: </strong>{{ price | safe }}</h4></li>
          </ul>
          <p>{{ blurb }}</p>
    </div>

  </div>
</section>
{% endblock %}
