{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ title }}{% endblock %}

{% block page_description %}{{ title }}{% endblock %}

{% block content %}
<!-- Resort Info -->
<section class="container baked">
  <div class="row">

<!-- Resort Title -->
  <div class="text-center pb-3">
    <h1>{{ title }}</h1>
  </div>

<!-- Left column photo -->
    <div class="col-lg-4 pb-2">
      <figure class="figure resort-photo">
        <img src="{{ relative_path }}img/{{ image }}" alt="{{ title }}" class="img-fluid">
      </figure>
    </div>

    <!-- Right column info -->
    <div class="col-lg-8">

      <section class="facts">
        <h4><strong>Location: </strong>{{ location }}</h4>
        <h4><strong>Closest Airport: </strong>{{ airport }}</h4>
        <h4><strong>Elevation: </strong>{{ elevation }}</h4>
        <h4><strong>Ticket Price: </strong>{{ price | safe }}</h4>
      </section>

      <p>{{ blurb }}</p>
    </div>

  </div>
</section>

{% endblock %}
